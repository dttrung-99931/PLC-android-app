<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_3sdp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="76dp"
        android:layout_height="107dp"
        app:srcCompat="@drawable/logo" />

    <LinearLayout
        android:id="@+id/llTruongKhoa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toEndOf="@id/imageView"
        android:layout_marginTop="@dimen/_3sdp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="TRƯỜNG ĐH GIAO THÔNG VẬN TẢI TP HCM"
            android:textColor="#062AEF"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvKhoa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="KHOA ĐIỆN-ĐIỆN TỬ VIỄN THÔNG"
            android:textColor="#062AEF"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_25sdp"
        android:text="Giám sát và điều khiển động cơ theo cấp tốc độ."
        android:textColor="#0ECD15"
        android:textSize="@dimen/_14ssp"
        android:layout_below="@id/llTruongKhoa"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:gravity="center"/>

</RelativeLayout>