<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="76dp"
            android:layout_height="107dp"
            android:layout_marginStart="@dimen/_5sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.012"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="TRƯỜNG ĐH GIAO THÔNG VẬN TẢI TP HCM"
            android:textColor="#062AEF"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="KHOA ĐIỆN-ĐIỆN TỬ VIỄN THÔNG"
            android:textColor="#062AEF"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="4dp"
            android:gravity="center"
            android:text="HO CHI MINH CITY UNIVERSITY OF TRANSPORT"
            android:textColor="#EC0505"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="Giám sát hệ thống"
            android:textColor="#0ECD15"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.481"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <LinearLayout
            android:id="@+id/lnLayoutNsx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView70"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày sản xuất:"
                android:textColor="#07197E"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/tvNsx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1/9/1999"
                android:textColor="#07197E"
                android:textSize="@dimen/_12ssp"
                android:layout_marginLeft="8dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnLayoutHsd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lnLayoutNsx"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView80"
                android:text="Hạn sử dụng:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#07197E"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/tvHsd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1/9/1999"
                android:textColor="#07197E"
                android:textSize="@dimen/_12ssp"
                android:layout_marginLeft="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnLayoutSoSpLoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lnLayoutHsd"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số sản phẩm lỗi:"
                android:textColor="#07197E"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvSoSpLoi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textColor="#07197E"
                android:textSize="@dimen/_12ssp"
                android:layout_marginLeft="8dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textViewControl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="Điều khiển hệ thống"
            android:textColor="#0ECD15"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.481"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lnLayoutSoSpLoi" />


        <LinearLayout
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_marginLeft="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewControl"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SL sản phẩm lỗi ngưng hệ thống:"
                android:textColor="#000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvSluongSphamNgungHThong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textColor="#000"
                android:textSize="@dimen/_12ssp"
                android:layout_marginLeft="8dp"/>

        </LinearLayout>


        <TextView
            android:id="@+id/textViewUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Nhập số lượng:"
            android:textColor="#000"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView10" />

        <EditText
            android:id="@+id/edtFailureProductionLimit"
            android:layout_width="50dp"
            android:layout_height="34dp"
            android:layout_marginLeft="56dp"
            android:inputType="number"
            app:layout_constraintLeft_toRightOf="@id/textViewUpdate"
            app:layout_constraintBottom_toBottomOf="@+id/textViewUpdate"
            android:background="@drawable/bg_edittext_border"/>

        <Button
            android:id="@+id/btnUpdateFailureProductLimit"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:layout_marginEnd="8dp"
            android:insetTop="3sp"
            android:insetBottom="3sp"
            android:text="OK"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <View
            android:id="@+id/divider1"
            android:layout_width="409dp"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="404dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnUpdateFailureProductLimit" />


        <View
            android:id="@+id/divider2"
            android:layout_width="409dp"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="404dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnUpdateFailureProductLimit" />

      
        <Button
            android:id="@+id/btnTurnOn"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="4dp"
            android:insetTop="3sp"
            android:insetBottom="3sp"
            android:text="OK"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewOn" />


        <LinearLayout
            android:id="@+id/textViewOn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider2"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Điều khiển hệ thống"
                android:textColor="#000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvSystemOn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(ON)"
                android:textColor="#000"
                android:textSize="@dimen/_12ssp"
                android:layout_marginLeft="8dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tvEnterON0Or1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Nhập giá trị 0 hoặc 1: "
            android:textColor="#000"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewOn" />

        <EditText
            android:id="@+id/edtOn"
            android:layout_width="50dp"
            android:layout_height="34dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_edittext_border"
            android:inputType="number"
            app:layout_constraintLeft_toRightOf="@id/tvEnterON0Or1"
            app:layout_constraintTop_toBottomOf="@id/textViewOn" />

        <View
            android:id="@+id/divider4"
            android:layout_width="409dp"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="404dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtOn"
            android:layout_marginTop="8dp"/>

        <LinearLayout
            android:id="@+id/textViewOff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider4"             android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Điều khiển hệ thống"
                android:textColor="#000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvSystemOff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(FF)"
                android:textColor="#000"
                android:textSize="@dimen/_12ssp"
                android:layout_marginLeft="8dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tvEnterOFF0Or1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Nhập giá trị 0 hoặc 1: "
            android:textColor="#000"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewOff" />

        <EditText
            android:id="@+id/edtOff"
            android:layout_width="50dp"
            android:layout_height="34dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:inputType="number"
            app:layout_constraintLeft_toRightOf="@id/textViewOff"
            app:layout_constraintTop_toBottomOf="@id/textViewOff"
            android:background="@drawable/bg_edittext_border" />

        <Button
            android:id="@+id/btnTurnOff"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:insetTop="3sp"
            android:insetBottom="3sp"
            android:text="OK"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewOff" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
